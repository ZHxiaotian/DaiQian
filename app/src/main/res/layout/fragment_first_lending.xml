<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_scrolllinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <include layout="@layout/fragment_ruhugcyuanyin" />

        <!-- #####################  申请人还款情况  ################### -->

        <include layout="@layout/layout_huankuan" />

        <!-- #####################  申请人基本情况  ################### -->

        <include layout="@layout/include_shenqingrenjibenqing" />

        <!--  -->

        <include layout="@layout/layout_zhexin_two" />
        <!-- ###########################申请人配偶情况############################## -->

        <include layout="@layout/layout_peiou" />
        <!-- ###############################担保人############################ -->

        <include layout="@layout/layout_danbaoren" />
        <!-- #############################共同偿债人############################ -->

        <include layout="@layout/layout_gongtong_changzhaoren" />
        <!--##################开卡资料补充######################### -->
        <include layout="@layout/fragment_kkzlbc" />
        <!-- ################################### 添加照片############################# -->

        <LinearLayout
            android:id="@+id/ll_dcwj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <TextView
                style="@style/content_title"
                android:text="调查问卷" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_zxrz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <TextView
                style="@style/content_title"
                android:text="video" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="视频每次只能录制一份，同样只能操作一份，长按视频图片可删除不满意的视频"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/spzl_imageview"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:contentDescription="haaha"
                android:scaleType="fitCenter"
                android:src="@drawable/tianjian" />
            <LinearLayout
                android:layout_width="100dip"
                android:layout_height="30dip"
                >
                <TextView
                    android:id="@+id/spzl_textView"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="1"
                    android:background="@color/add_picture_bg"
                    android:gravity="center"
                    android:text="上传"
                    android:textColor="@color/add_picture_text"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/playsp_textView"
                    android:layout_width="0dip"
                    android:layout_height="30dip"
                    android:layout_weight="1"
                    android:background="@color/add_picture_bg"
                    android:gravity="center"
                    android:text="播放"
                    android:textColor="@color/add_picture_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/layout_sb"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/content_title"
                android:text="添加照片" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="长按 照片会弹出一个显示所有照片的对话框，可对对话框中照片做如下操作,1>单点是消失2>长按是删除照片并消失"
                android:textColor="@color/black" />
            <!-- 照片第一行 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:orientation="horizontal" >

                <!-- 第1个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/sfzzm_imageview"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:contentDescription="haaha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/sfzzm_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="其他1"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 第2个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/sfzfm_imageview"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/sfzfm_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="其他2"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 第3个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/scsfz_imageview"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:contentDescription="haaha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/scsfz_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="其他3"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 第4个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/ydcyhy_imageview"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/ydcyhy_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="收入证明"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 第5个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/zzzm_imageView"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:contentDescription="haaha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/zzzm_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="购车发票"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout> <!-- 照片第二行 end -->


            <!-- 照片第二行 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:orientation="horizontal" >

                <!-- 第1个图片 -->

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/sqrxq_imageView"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:contentDescription="haaha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/sqrxq_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 第2个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/sqrszlh_imageView"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:contentDescription="haaha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/sqrszlh_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="车辆抵押证明"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 第3个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/sqrszdy_imageView"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:contentDescription="haaha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/sqrszdy_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="车辆保险单"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 第4个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/sqrszmph_imageView"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:contentDescription="haaha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/sqrszmph_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="购车合同"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 第5个图片 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/dw_imageView"
                        android:layout_width="100dip"
                        android:layout_height="100dip"
                        android:contentDescription="haaha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/tianjian" />

                    <TextView
                        android:id="@+id/dw_textView"
                        android:layout_width="100dip"
                        android:layout_height="30dip"
                        android:background="@color/add_picture_bg"
                        android:gravity="center"
                        android:text="征信报告文件"
                        android:textColor="@color/add_picture_text"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout> <!-- 照片第二行 end -->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_savedata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="200dip"
                    android:layout_height="60dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="30dip"
                    android:background="@drawable/button_normal"
                    android:text="缓存数据到本地"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_submit_save"
                    android:layout_width="200dip"
                    android:layout_height="60dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="30dip"
                    android:background="@drawable/button_normal"
                    android:text="保存并生成报告"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_submit_delete"
                    android:layout_width="200dip"
                    android:layout_height="60dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="30dip"
                    android:background="@drawable/button_normal"
                    android:text="删除缓存数据"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>