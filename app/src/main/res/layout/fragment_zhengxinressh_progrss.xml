<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_zhengxin_survey"
            style="@style/content_item_title"
            android:text="查询" />

        <EditText
            android:id="@+id/et_zhenxinresh_progras"
            style="@style/content_item_edittext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="姓名" />

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:text="状态" />

        <TextView
           android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份证号" />

        <TextView
           android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="身份证照片地址" />

        <TextView
           android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="授权照片地址" />
    </LinearLayout>

    <ListView
        android:layout_marginTop="20dip"
        android:id="@+id/lv_zhenxinresh_progras"
        android:layout_width="match_parent"
        android:layout_height="0dip"
         android:dividerHeight="20dip"
         android:divider="#01000000"
        android:layout_weight="1" />

</LinearLayout>